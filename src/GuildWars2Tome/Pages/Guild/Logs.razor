@page "/guild/logs"
@layout GuildLayout

<h3>Guild Logs</h3>

@if (logs == null || logs.Count() == 0)
{
    <LoadingIndicator />
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Message</th>
                <th>Item</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in logs)
            {
                <tr>
                    <td class="text-nowrap">@log.Datestamp.ToString("yyyy-MM-dd")</td>
                    <td>@log.LogType</td>
                    <td>@log.Message</td>
                    <td><img src="@log.ImageSource" title="" /></td>
                </tr>
            }
        </tbody>
    </table>
}